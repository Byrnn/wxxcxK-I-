<view class="content">
    <!--<view class = "logo">
        <image mode="aspectFit" src="/images/logo.png"></image>
    </view>-->
    <form bindsubmit="formSubmit">
        <view class="input-area">
          <input bindinput="bindinputOldPassword" value="{{inputOldPassword}}" auto-focus maxlength='50' type="password" placeholder="原密码" />
          <input bindinput="bindinputNewPassword" value="{{inputNewPassword}}" auto-focus maxlength='50' type="password" placeholder="新密码" />
          <input bindinput="bindinputCheckNewPassword" value="{{inputCheckNewPassword}}" auto-focus maxlength='50' type="password" placeholder="确认新密码" />
        </view>
        <view class="btn-area">
            <button  style="background-color:#007a4c;"  bindtap="submitChangePwd" loading="{{btnLoading}}"> 确认 </button>
        </view>
    </form>

    <!--<progress class="myprogress" percent="{{percent }}" color="{{color}}" active/>-->
    
</view>